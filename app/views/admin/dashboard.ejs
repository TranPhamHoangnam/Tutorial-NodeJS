<!doctype html>
<html lang="en">
  <head>
    <title>Dashboard</title>

    <%  include layout/head  %>

  </head>
  <body>
      
    <% include layout/nav %>

    <a href="/admin/post/new" class="btn btn-success pull-right">Add new post</a>

            <table class="table table-striped table-inverse mt-5">
                <thead class="thead-inverse">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Author</th>
                        <th>Create at</th>
                        <th>Update at</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>

                        <% if(data && data.posts){ %>
                            <% data.posts.forEach((phantu) => { %>

                                <tr>
                                    <td> <%= phantu._id %> </td>
                                    <td> <%= phantu.title %> </td>
                                    <td> <%= phantu.content %> </td>
                                    <td> <%= phantu.author %> </td>
                                    <td> <%= phantu.created_at %> </td>
                                    <td> <%= phantu.updated_at %> </td>
                                    <td> 

                                        <a href="/admin/post/edit.<%= phantu._id %>"  class="text-decoration-none">
                                            <i class="fa fa-edit text-info mx-2">Sửa</i>
                                        </a>
                                        <a href="/admin/post/delete.<%= phantu._id %>" onclick="return xoa('Bạn có chắc chắn muốn xóa')" class="text-decoration-none"> 
                                            <i class="fa fa-remove text-danger mx-2">Xóa</i>
                                        </a>

                                    </td>
                                </tr>

                            <% }) %>
                        <% } %>

                    </tbody>
            </table>

        
    <script type="text/javascript">
        function xoa(tinNhan){
            if(window.confirm(tinNhan) === true)
            {
                return true;
            }
            else {
                return false;
            }
        }
    </script>

    <% include layout/footer %>

  </body>
</html>