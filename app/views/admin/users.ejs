<!doctype html>
<html lang="en">
  <head>
    <title>Dashboard</title>

    <%  include layout/head  %>

  </head>
  <body>
      
    <% include layout/nav %>

            <table class="table table-striped table-inverse mt-5">
                <thead class="thead-inverse">
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th>Created at</th>
                        <th>Updated at</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>

                        <% if(data && data.users){ %>
                            <% data.users.forEach((phantu) => { %>

                                <tr>
                                    <td> <%= phantu._id %> </td>
                                    <td> <%= phantu.email %> </td>
                                    <td> <%= phantu.password %> </td>
                                    <td> <%= phantu.first_name %> </td>
                                    <td> <%= phantu.last_name %> </td>
                                    <td> <%= phantu.created_at %> </td>
                                    <td> <%= phantu.update_at %> </td>
                                    <td> 

                                        <a href="/admin/post/edit.<%= phantu._id %>"  class="text-decoration-none">
                                            <i class="fa fa-edit text-info mx-2">Sửa</i>
                                        </a>
                                        <a href="/admin/post/delete.<%= phantu._id %>" onclick="return xoa('Bạn có chắc chắn muốn xóa')" class="text-decoration-none"> 
                                            <i class="fa fa-remove text-danger mx-2">Xóa</i>
                                        </a>

                                    </td>
                                </tr>

                            <% }) %>
                        <% } %>

                    </tbody>
            </table>

        
    <script type="text/javascript">
        function xoa(tinNhan){
            if(window.confirm(tinNhan) === true)
            {
                return true;
            }
            else {
                return false;
            }
        }
    </script>

    <% include layout/footer %>

  </body>
</html>