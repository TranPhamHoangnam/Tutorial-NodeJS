<!doctype html>
<html lang="en">
  <head>
    <title>New Post</title>
   
    <% include ../layout/head %>

  </head>
  <body>
      <% include ../layout/nav %>

      <div class="container">
        <div class="row">
          
          <div class="col-md-8">

            <% if(data && data.error){ %>
                <div id="login-alert" class="alert alert-danger">
                  
                    <%= data.error %>

                </div>
            <% } %>

            <form action="/admin/post/edit.<%= data.posts._id %>" method="POST" role="form" class="mt-5">
                <div class="form-group">
                  <label for="title">Title</label>
                  <input type="text" value="<%= data.posts.title %>"
                    class="form-control" name="title" id="title" aria-describedby="helpId" placeholder="">
                </div>

                <div class="form-group">
                  <label for="content">Content</label>
                  <textarea type="text"
                    class="form-control" name="content" id="content" aria-describedby="helpId" placeholder="">

                    <%= data.posts.content %>

                  </textarea>
                </div>
    
                <div class="form-group">
                  <label for="author">Author</label>
                  <input type="text" value="<%= data.posts.author %>"
                    class="form-control" name="author" id="author" aria-describedby="helpId" placeholder="">
                </div>
                
                <button class="btn btn-danger pull-right">Update post</button>
              </form>


          </div>
          

        </div>
      </div>


      <% include ../layout/footer %>
  </body>
</html>